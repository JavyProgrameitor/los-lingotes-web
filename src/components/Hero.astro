---
import { site } from "../data/site";
---

<section id="inicio" class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-zinc-950"></div>
    <div
      class="absolute -left-40 -top-40 h-112 w-240 rotate-[-18deg] rounded-[999px] bg-linear-to-r from-amber-200/25 via-amber-400/25 to-yellow-200/10 blur-2xl"
    >
    </div>
    <div
      class="absolute -right-40 -bottom-48 h-112 w-240 rotate-12 rounded-[999px] bg-linear-to-r from-yellow-200/10 via-amber-400/25 to-amber-200/10 blur-2xl"
    >
    </div>
    <div class="absolute inset-0 bg-linear-to-b from-transparent via-zinc-950/40 to-zinc-950"></div>
  </div>

  <div class="mx-auto max-w-5xl px-4 py-14 sm:py-20">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <div>
        <p
          class="inline-flex items-center gap-2 rounded-full border border-amber-300/30 bg-amber-300/10 px-3 py-1 text-xs font-medium text-amber-200"
        >
          ✨ Carnaval • {site.city}
        </p>

        <h1
          class="mt-5 text-4xl font-extrabold tracking-tight text-white sm:text-5xl"
          style="font-family: var(--font-display);"
        >
          Comparsa <span class="text-amber-300">{site.name}</span>
        </h1>

        <p class="mt-5 text-base leading-relaxed text-zinc-200">
          {site.tagline}
        </p>

        <div class="mt-8 flex flex-col gap-3 sm:flex-row">
          <a
            href="https://www.facebook.com/reel/1294726225726057"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center justify-center gap-2 rounded-2xl bg-amber-300 px-5 py-3 text-sm font-semibold text-zinc-950
         shadow-lg shadow-amber-300/20 hover:bg-amber-200"
          >
            ▶ Ver actuaciones
          </a>

          <a
            href="#galeria"
            class="inline-flex items-center justify-center rounded-2xl border border-zinc-700 bg-zinc-900/40 px-5 py-3 text-sm font-semibold text-white hover:bg-zinc-900"
          >
            Ver galería
          </a>
        </div>
      </div>

      <div class="relative">
        <div
          class="mx-auto max-w-sm rounded-4xl border border-amber-300/20 bg-zinc-900/40 p-6 shadow-2xl shadow-black/40 backdrop-blur"
        >
          <div class="flex items-center justify-between">
            <p class="text-xs font-semibold text-amber-200">Edición</p>
            <p class="text-xs text-zinc-300">limited</p>
          </div>

          <div class="mt-5 flex items-center justify-center">
            <img
              src={site.logo}
              alt="Logo Los Lingotes"
              class="h-56 w-56 rounded-full object-cover ring-2 ring-amber-300/40 shadow-lg shadow-amber-300/10"
              loading="lazy"
            />
          </div>

          <p class="mt-6 text-center text-sm text-zinc-200">“{site.tagline}”</p>
        </div>
      </div>
    </div>
  </div>
</section>
