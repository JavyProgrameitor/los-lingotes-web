---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import SectionGaleria from "../components/SectionGaleria.astro";
import SectionVideos from "../components/SectionVideos.astro";
import Footer from "../components/Footer.astro";
import SectionInstagram from "../components/SectionInstagram.astro";

const SITE_URL = "https://loslingotes.es";
const OG_IMAGE = `${SITE_URL}/og.jpg`;

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Comparsa Los Lingotes",
  url: SITE_URL,
  logo: OG_IMAGE,
  sameAs: ["https://www.facebook.com/loslingotes"],
  address: {
    "@type": "PostalAddress",
    addressLocality: "Talavera la Real",
    addressRegion: "Extremadura",
    addressCountry: "ES",
  },
});
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Comparsa Los Lingotes | Talavera la Real</title>
    <meta
      name="description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, historia y carnaval."
    />

    <link rel="canonical" href={`${SITE_URL}/`} />
    <meta name="theme-color" content="#0a0a0a" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Comparsa Los Lingotes" />
    <meta property="og:title" content="Comparsa Los Lingotes | Talavera la Real" />
    <meta
      property="og:description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, galería y vídeos."
    />
    <meta property="og:url" content={`${SITE_URL}/`} />
    <meta property="og:image" content={OG_IMAGE} />
    <meta property="og:image:secure_url" content={OG_IMAGE} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Logo Los Lingotes" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Comparsa Los Lingotes | Talavera la Real" />
    <meta
      name="twitter:description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, galería y vídeos."
    />
    <meta name="twitter:image" content={OG_IMAGE} />

    <!-- SEO local: datos estructurados -->
    <script type="application/ld+json" is:inline set:html={jsonLd} />

    <!-- Tema: evita flash -->
    <script is:inline>
      (() => {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const theme = stored ?? (prefersDark ? "dark" : "light");
        document.documentElement.classList.toggle("dark", theme === "dark");
      })();
    </script>
  </head>

  <body class="bg-amber-50 text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100">
    <Header />
    <Hero />
    <SectionGaleria />
    <SectionVideos />
    <SectionInstagram />
    <Footer />
  </body>
</html>
