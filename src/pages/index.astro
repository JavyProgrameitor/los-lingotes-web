      name="description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, historia y carnaval."
    />

    <link rel="canonical" href={`${SITE_URL}/`} />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <meta name="theme-color" content="#0a0a0a" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Comparsa Los Lingotes" />
    <meta property="og:title" content="Comparsa Los Lingotes | Talavera la Real" />
    <meta
      property="og:description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, galer√≠a y v√≠deos."
    />
    <meta property="og:url" content={`${SITE_URL}/`} />
    <meta property="og:image" content={OG_IMAGE} />
    <meta property="og:image:secure_url" content={OG_IMAGE} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Logo Los Lingotes" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Comparsa Los Lingotes | Talavera la Real" />
    <meta
      name="twitter:description"
      content="Comparsa de Carnaval Los Lingotes de Talavera la Real. Actuaciones, galer√≠a y v√≠deos."
    />
    <meta name="twitter:image" content={OG_IMAGE} />

    <!-- SEO local: datos estructurados -->
    <script type="application/ld+json" is:inline set:html={jsonLd} />
    <!-- cpomprrobaci√≥n del busacador Bing -->
    <meta name="msvalidate.01" content="2B7261B181FB3A3472FF5A58A9D5AB6D" />

    <meta name="robots" content="index,follow" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- Tema: evita flash -->
    <script is:inline>
      (() => {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        const theme = stored ?? (prefersDark ? "dark" : "light");
        document.documentElement.classList.toggle("dark", theme === "dark");
      })();
    </script>
  </head>

  <body class="bg-amber-50 text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100">
    <Header />
    <Hero />
    <!-- Carnaval (SEO + contenido visible) -->
    <section id="carnaval" class="mx-auto max-w-5xl px-4 py-16">
      <header class="max-w-2xl">
        <h2
