---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import SectionGaleria from "../components/SectionGaleria.astro";
import SectionVideos from "../components/SectionVideos.astro";
import Footer from "../components/Footer.astro";
import SectionInstagram from "../components/SectionInstagram.astro";
import SectionTicTok from "../components/SectionTicTok.astro";
import Palmares from "../components/Palmares.astro";
import Salimos from "../components/Salimos.astro";
import SparkleIcon from "../icons/SparkleIcon.astro";
import TrophyIcon from "../icons/TrophyIcon.astro";

const SITE_URL = "https://loslingotes.es";
const OG_IMAGE = `${SITE_URL}/og.jpg`;

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Comparsa Los Lingotes",
  url: SITE_URL,
  logo: OG_IMAGE,
  image: OG_IMAGE,
  description:
    "Comparsa de Carnaval Los Lingotes de Talavera la Real (Badajoz). Actuaciones, historia y carnaval.",
  sameAs: [
    "https://www.facebook.com/loslingotes",
    "https://www.instagram.com/comparsalingotes",
    "https://www.tiktok.com/@comparsaloslingotes",
  ],
  address: {
    "@type": "PostalAddress",
    addressLocality: "Talavera la Real",
    addressRegion: "Extremadura",
    addressCountry: "ES",
  },
});
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Comparsa Los Lingotes | Talavera la Real</title>
